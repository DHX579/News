<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/head_bg"
    android:paddingBottom="30dp"
    android:paddingTop="50dp">
    <!--顶部头像等资料信息-->
        <LinearLayout
            android:id="@+id/ll1"
            android:paddingLeft="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_bottom"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/icon_avatar" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/left_menu_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="名字:jiangqqlmj"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/left_menu_represent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="菜鸟窝高级会员"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </LinearLayout>
        <!--底部信息栏-->
        <!--<TextView-->
            <!--android:id="@+id/tv_mail"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:text="jiangqqlmj@163.com"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="15sp" />-->
        <!--中间信息列表-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/left_item_recyclerview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:cacheColorHint="@color/color_transparent"
            android:scrollbars="none">

        </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>